<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.monika.patient_r.AfterLoginActivity"
    tools:showIn="@layout/app_bar_after_login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#9aa738"
        android:textColorHighlight="#e47070"
        android:textSize="25dp"
        android:textStyle="bold"
        android:autoText="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Latest Parameters:"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textIsSelectable="false"
        android:textSize="20dp"
        android:textColor="#da8e5c"
        android:textStyle="bold"
        android:layout_marginTop="5dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:outlineProvider="bounds"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Blood Pressure:"
                android:id="@+id/textView6"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:textSize="18dp"
                android:textColor="#6e1b5c"
                android:textStyle="bold"
                android:background="#d7d1d2"
                android:paddingStart="3dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Temperature:"
                android:id="@+id/textView7"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:textSize="18dp"
                android:textColor="#6e1b5c"
                android:background="#d7d1d2"
                android:textStyle="bold"
                android:paddingStart="3dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Pulse Rate:"
                android:id="@+id/textView8"
                android:layout_column="0"
                android:background="#d7d1d2"
                android:layout_margin="5dp"
                android:textSize="18dp"
                android:textColor="#6e1b5c"
                android:textStyle="bold"
                android:paddingStart="3dp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Last Prescription:"
        android:id="@+id/textView9"
        android:layout_below="@+id/tableLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="#da8e5c"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Medicine Name:"
                android:id="@+id/textView10"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:textSize="18dp"
                android:textColor="#6e1b5c"
                android:background="#d7d1d2"
                android:textStyle="bold"
                android:paddingStart="3dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Doze:"
                android:id="@+id/textView11"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:textSize="18dp"
                android:textColor="#6e1b5c"
                android:background="#d7d1d2"
                android:textStyle="bold"
                android:paddingStart="3dp" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
